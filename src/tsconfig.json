{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"noEmitOnError": false,
		"module": "CommonJS",
		"target": "ESNext",
		"allowJs": true,
		"noImplicitAny": false,
		"moduleResolution": "node",
		"importHelpers": true,
		"skipLibCheck": true,
		// "strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"jsx": "react"
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "**/node_modules/*"]
}
